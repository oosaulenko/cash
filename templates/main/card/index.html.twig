{% extends 'main/base.html.twig' %}

{% block title %} Баланс - LooCash {% endblock %}

{% block body %}
    {% if cards %}
        <div class="card mb-4">
            <div class="card-body">
                <div class="card-content">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success mb-3" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    <ul>
                        {% for card in cards %}
                            <li>{{ card.name }} - {{ card.balance }} - {{ card.currency }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% else %}
        <div class="empty empty_cards text-center pt-5">
            <div class="empty__image mb-5"><img src="{{ asset('assets/main/images/not_found/card.svg') }}" alt=""></div>
            <div class="empty__text text-muted mb-4">У вас нету банковских карт</div>
            <div class="empty__actions">
                <a href="{{ path('card_add') }}" class="btn btn-primary btn-lg text-white">Добавить карту</a>
                {% if monobank_token %}
                    <a href="{{ path('list_all_cards_monobank') }}" class="btn btn-secondary btn-lg text-white">Добавить
                        карты монобанка</a>
                {% endif %}
            </div>
        </div>
    {% endif %}

{% endblock %}