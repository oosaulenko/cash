{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="mb-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    </div>

    <div class="mb-4">
        <a href="{{ path('admin_category_create') }}" class="btn btn-primary btn-lg text-uppercase text-white">Создать категорию</a>
    </div>

    <table class="table table-striped table-hover">
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.mcc }}</td>
                <td><i class="{{ category.icon }}"></i></td>
                <td>{{ category.priority }}</td>
                <td><a href="{{ path('admin_category_update', {'id' : category.id}) }}" class="btn btn-secondary btn-sm text-uppercase text-white">Редактировать</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}