<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %} {{ title }} {% endblock %} - LooCash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    <link rel="icon" type="image/png" href="/favicon.png"/>
    {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
              rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
{% if app.user %}
    <header class="header bg-white d-flex align-items-center border-bottom">
        <div class="container-fluid">

            <div class="row justify-content-between w-100">
                <div class="col header__menu">
                    <div class="menu-icon" id="sideNavButton">
                        <span></span><span></span><span></span></div>
                    <span>{{ title }}</span>
                </div>

                <div class="col header__account d-flex justify-content-end align-items-center">
                    <div class="header__account_icon me-3 border border-2 rounded-circle text-center align-items-center">{{ random(['⛷', '🏋', '🎿', '🏄', '🏂', '🏇', '🚴', '⚽', '🎾', '🏀', '🏈', '🏌']) }}</div>
                    <div class="header__account_name"><a href="{{ path('app_logout') }}" class="text-dark">{{ app.user.username }}</a></div>
                </div>
            </div>
        </div>
    </header><!-- .site-navigation -->


    <div class="sidenav bg-white">
        <div class="navbar-brand text-center border-bottom">
            <a href="/" class="logo">Loo<b>Cash</b></a>
        </div>

        <nav class="sidenav__menu d-flex flex-column">
            <div class="sidenav__item">
                <a href="/"><i class="fal fa-tachometer-alt-fastest"></i><span>Главная</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('transactions') }}"><i class="fal fa-reply"></i><span>Транзакции</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('cards') }}"><i class="fal fa-toolbox"></i><span>Баланс</span></a>
            </div>
            <div class="sidenav__item">
                <a href="/"><i class="fal fa-calendar-alt"></i><span>Бюджет</span></a>
            </div>
            <div class="sidenav__item">
                <a href="/"><i class="fal fa-chart-line"></i><span>Отчет</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('user_settings') }}"><i class="fal fa-cog"></i><span>Настройки</span></a>
            </div>
            <div class="sidenav__item border-top">
                <a href="{{ path('admin_category') }}"><i class="fal fa-cog"></i><span>Категории</span></a>
            </div>
        </nav>
    </div>
{% endif %}

<div class="container-fluid">
    <div class="page-block mt-4 ps-3 pe-3">
        {{ include('main/_alerts.html.twig') }}

        {% block body %}{% endblock %}
    </div>
</div>

<footer class="footer bg-white p-4 mt-auto">
    <div class="container">
        <div class="row align-items-center text-muted">
            <div class="col footer__copyright">All rights reserved</div>
            <div class="col text-end footer__site">&copy; 2021 “LooCash”</div>
        </div>
    </div>
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
