{% extends 'main/base.html.twig' %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-content">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-primary btn-lg text-white">{{ button_label|default('Добавить') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('form') }}
{% endblock %}