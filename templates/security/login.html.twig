{% extends 'main/base.html.twig' %}

{% block title %}Авторизация - LooCash{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-12 text-center mb-5"><a href="/" class="logo logo-lg">Loo<b>Cash</b></a></div>
        <div class="form form-sign_in bg-white p-5 col-lg-5 rounded">
            <form class="user-registration-form user-registration-form-login login mb-4" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-group mb-4">
                    <label for="inputEmail" class="form-label">Email / Логин</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="form-control form-control-lg"
                           required autofocus>
                </div>

                <div class="form-group mb-4">
                    <label for="inputPassword" class="form-label">Пароль</label>
                    <input type="password" name="password" id="inputPassword" class="form-control form-control-lg"
                           required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg text-white" type="submit">Войти</button>
                </div>
            </form>

            <div class="text-center">Нет аккаунта? <a href="{{ path('sign_up') }}">зарегистрироваться</a></div>

        </div>
    </div>
{% endblock %}
