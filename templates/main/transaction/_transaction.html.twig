{% for transaction in transactions %}

    {{ dump(transaction) }}

    <div class="transaction mb-4">
        <div class="transaction__inner d-flex align-items-center">
            <div class="col-sm-5">
                <div class="d-flex align-items-center">
                    <div class="transaction__icon me-3"><i class="{{ transaction.category.icon }}"></i></div>
                    <div>
                        <div class="transaction__description fw-bold">
                            {% if transaction.description|length > 20 %}
                                {{ transaction.description|slice(0, 20) ~ '...' }}
                            {% else %}
                                {{ transaction.description }}
                            {% endif %}
                        </div>
                        <div class="transaction__bank_card text-muted fs-6">{{ transaction.card.name }}</div>
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="transaction__category fs-6 d-flex align-items-center">
                    <span class="icon-color me-2"></span>
                    <span>{{ transaction.category.name }}</span>
                </div>
            </div>

            <div class="col-sm-2">
                <div class="transaction__date text-muted fs-6">{{ transaction.time }}</div>
            </div>

            <div class="col-sm-2">
                <div class="transaction__balance_box text-end">
                    <div class="transaction__amount">
                        <span class="value">â‚´</span>
                        <span class="name">{{ transaction.amount }}</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endfor %}