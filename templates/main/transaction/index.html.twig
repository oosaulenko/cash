{% extends 'main/base.html.twig' %}

{% block body %}
    {% if transactions %}

        <div class="income_expense d-flex align-items-center mb-5">
            <div class="income_expense__income d-flex align-items-center me-5">
                <div class="income_expense__icon me-3">{{ include('components/_inex.html.twig', {'value' : 1, 'size': 'lg'}) }}</div>
                <div class="income_expense__name me-3 fs-6 text-muted">Доходы</div>
                <div class="income_expense__value fw-bold">{{ sumIncome }}</div>

            </div>
            <div class="income_expense__expense d-flex align-items-center">
                <div class="income_expense__icon me-3">{{ include('components/_inex.html.twig', {'value' : 0, 'size': 'lg'}) }}</div>
                <div class="income_expense__name me-3 fs-6 text-muted">Расходы</div>
                <div class="income_expense__value fw-bold">{{ sumExpense }}</div>
            </div>
        </div>

        {{ include('main/transaction/_transaction.html.twig', {'transactions' : transactions}) }}


        <div class="filter bg-dark text-light pt-5 ps-4 pe-4">
{#            <div class="icon-filter" id="sideFilterButton"><i class="fal fa-angle-right"></i></div>#}
            <h3 class="filter__title mb-5">Фильтр</h3>

            {{ form_start(filterForm) }}
            <div class="filter__item mb-4">
                <h5 class="filter__title">Тип</h5>
                <div class="filter__value d-flex align-items-center">
                    <div class="w-100">{{ form_row(filterForm.typeIncome) }}</div>
                    <div class="w-100">{{ form_row(filterForm.typeExpense) }}</div>
                </div>
            </div>

            <div class="filter__item mb-4">
                <h5 class="filter__title">Сортировка</h5>
                <div class="filter__value">
                    {{ form_row(filterForm.sort) }}
                </div>
            </div>

            <div class="filter__item mb-4">
                <h5 class="filter__title">Сумма</h5>
                <div class="filter__value">
                    <div class="d-flex flex-column">
                        <div class="form-group form-group-range">
                            <div class="field-range mb-3"><div id="filter_transaction_priceRange"></div></div>
                            <div class="d-flex align-items-center">
                                <div class="me-2">{{ form_row(filterForm.amountFrom) }}</div>
                                <div class="ms-2">{{ form_row(filterForm.amountTo) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="filter__item mb-4">
                <h5 class="filter__title">Категория</h5>
                <div class="filter__value">
                    {{ form_row(filterForm.category) }}
                </div>
            </div>

            <div class="filter__item mb-4">
                <h5 class="filter__title">Дата</h5>
                <div class="filter__value">
                    <div class="d-flex flex-column">
                        <div class="mb-2">{{ form_row(filterForm.dateFrom) }}</div>
                        <div class="">{{ form_row(filterForm.dateTo) }}</div>
                    </div>
                </div>
            </div>

            <div class="d-flex">
                <a href="{{ path('transactions') }}" class="btn btn-secondary text-white me-2 w-100">Очистить</a>
                <button class="btn btn-primary text-white w-100">Применить</button>
            </div>

            {{ form_end(filterForm) }}
        </div>
    {% else %}
        <div class="empty empty_cards text-center pt-5">
            <div class="empty__image mb-5"><img src="{{ asset('assets/main/images/not_found/card.svg') }}" alt=""></div>
            <div class="empty__text text-muted mb-4">У вас нету банковских карт</div>
            <div class="empty__actions">
                <a href="{{ path('card_add') }}" class="btn btn-primary btn-lg text-white">Добавить карту</a>
            </div>
        </div>
    {% endif %}

{% endblock %}