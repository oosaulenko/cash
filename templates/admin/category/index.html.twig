{% extends 'main/base.html.twig' %}

{% block body %}

    <div class="mb-4">
        <a href="{{ path('admin_category_create') }}" class="btn btn-primary btn-lg text-uppercase text-white">Создать категорию</a>
        <a href="{{ path('admin_category_mcc') }}" class="btn btn-secondary btn-lg text-uppercase text-white">MCC</a>
    </div>

    <table class="table table-striped table-hover">
        {% for category in categories %}
            <tr>
                <td><b>{{ category.name }}</b></td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.mcc }}</td>
                <td><i class="{{ category.icon }}"></i></td>
                <td>{{ category.priority }}</td>
                <td><a href="{{ path('admin_category_update', {'id' : category.id}) }}" class="btn btn-secondary btn-sm text-uppercase text-white"><i class="fal fa-pencil-alt"></i></a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}