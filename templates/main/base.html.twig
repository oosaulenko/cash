<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %} {{ title }} {% endblock %} - LooCash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    <link rel="icon" type="image/png" href="/favicon.png"/>
    {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
{% if app.user %}
    <div class="sidenav bg-white d-flex flex-column">

        <div class="menu-icon" id="sideNavButton"><i class="fal fa-angle-right"></i></div>

        <div class="account d-flex align-items-center mt-5 mb-6">
            <div class="account__icon border border-2 rounded-circle text-center d-flex align-items-center justify-content-center">
                {{ random(['⛷', '🏋', '🎿', '🏄', '🏂', '🏇', '🚴', '⚽', '🎾', '🏀', '🏈', '🏌']) }}
            </div>
            <div class="account__name fs-3">Oleg O.</div>
        </div>

        <nav class="sidenav__menu d-flex flex-column mb-auto">
            <div class="sidenav__item">
                <a href="/"><i class="fal fa-tachometer-alt-fastest"></i><span>Главная</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('transactions') }}"><i class="fal fa-exchange"></i><span>Транзакции</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('cards') }}"><i class="fal fa-credit-card"></i><span>Банковские карты</span></a>
            </div>
            <div class="sidenav__item">
                <a href="/"><i class="fal fa-calendar-alt"></i><span>Бюджет</span></a>
            </div>
            <div class="sidenav__item">
                <a href="/"><i class="fal fa-chart-line"></i><span>Отчет</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('user_settings') }}"><i class="fal fa-cog"></i><span>Настройки</span></a>
            </div>
            <div class="sidenav__item">
                <a href="{{ path('admin_category') }}"><i class="fal fa-tools"></i><span>Категории</span></a>
            </div>
        </nav>

        <div class="footer p-4 pb-5">
            <div class="footer__logo fw-bold">LooCash.</div>
            <div class="footer__copyright text-muted">2021 All rights reserved</div>
        </div>
    </div>

    <header class="header d-flex align-items-center">
        <div class="container-fluid">
            <div class="ps-5 pe-5 pt-5">
                <div class="d-flex align-items-center justify-content-between w-100">
                    <h1 class="mb-0">{{ title }}</h1>
                    {% block header %}{% endblock %}
                </div>
            </div>
        </div>
    </header><!-- .site-navigation -->

{% endif %}

<div class="container-fluid">
    <div class="page-block mt-5 ps-5 pe-5">
        {{ include('main/_alerts.html.twig') }}

        {% block body %}{% endblock %}
    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
