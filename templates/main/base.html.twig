<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}LooCash{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/main/css/style.min.css') }}">
    {% endblock %}
</head>
<body>
<div class="page">
    {% if app.user %}
        <header class="header bg-white d-flex align-items-center border-bottom">
            <div class="container-fluid">

                <div class="row justify-content-between w-100">
                    <div class="col header__menu">
                        <div class="menu-icon" id="sideNavButton">
                            <span></span><span></span><span></span></div>
                        <span>{{ title }}</span>
                    </div>

                    <div class="col header__account text-right">
                        Account
                    </div>
                </div>
            </div>
        </header><!-- .site-navigation -->

        <div class="sidenav bg-white">
            <a href="/" class="navbar-brand text-center">Loo<b>Cash</b></a>

            <nav class="sidenav__menu">
                <div class="sidenav__item">
                    <a href="/"><i class="fal fa-tachometer-alt-fastest"></i><span>Главная</span></a>
                </div>
                <div class="sidenav__item">
                    <a href="/transactions"><i class="fal fa-reply"></i><span>Транзакции</span></a>
                </div>
                <div class="sidenav__item">
                    <a href="/balances"><i class="fal fa-toolbox"></i><span>Баланс</span></a>
                </div>
                <div class="sidenav__item">
                    <a href="/"><i class="fal fa-calendar-alt"></i><span>Бюджет</span></a>
                </div>
                <div class="sidenav__item">
                    <a href="/"><i class="fal fa-chart-line"></i><span>Отчет</span></a>
                </div>
                <div class="sidenav__item">
                    <a href="/settings"><i class="fal fa-cog"></i><span>Настройки</span></a>
                </div>
            </nav>
        </div>
    {% endif %}

    <div class="container-fluid">
        <div class="page-block mt-4">
            {% block body %}{% endblock %}
        </div>
    </div>

    <footer class="footer bg-white p-4 mt-4">
        <div class="container">
            <div class="row align-items-center text-muted">
                <div class="col footer__copyright">All rights reserved</div>
                <div class="col text-right footer__site">&copy; 2021 “LooCash”</div>
            </div>
        </div>
    </footer>

</div>
{% block javascripts %}
    <script src="{{ asset('assets/main/js/jquery-3.5.1.min.js') }}"></script>
    <script src="{{ asset('assets/main/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/main/js/main.js') }}"></script>
{% endblock %}
</body>
</html>
