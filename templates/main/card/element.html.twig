{% extends 'main/base.html.twig' %}


{% block body %}

    <div class="row">
        <div class="col-sm-5">

            <div class="d-flex mb-4">
                <div class="bank_card_visual d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-auto">
                        <div class="bank_card_visual__name">{{ card.name }}</div>
                        <div class="bank_card_visual__type">{{ include('main/card/field/_type.html.twig', {'type' : card.type}) }}</div>
                    </div>
                    <div class="bank_card_visual__balance">{{ include('main/card/field/_currency.html.twig', {'currency' : card.currency}) }} {{ balance }}</div>
                </div>
            </div>

            <div class="">
                <h3 class="mb-4">Последние транзакции</h3>
                {{ include('main/transaction/_transaction.html.twig', {'transactions' : transactions, 'options' : options|default('') }) }}
            </div>
        </div>
        <div class="col-sm-7">

            <div class="row mb-5">
                <div class="col-sm-8">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Доходы</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Расходы</button>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <select class="form-select" id="rangeCard" aria-label="Диапазон" data-id="{{ card.id }}">
                        <option disabled>Диапазон</option>
                        <option value="365">Год</option>
                        <option value="182">Пол года</option>
                        <option value="120">Квартал</option>
                        <option value="90">3 Месяца</option>
                        <option value="30">Месяц</option>
                        <option value="14">Две недели</option>
                        <option value="7" selected>Неделя</option>
                        <option value="1">День</option>
                    </select>
                </div>
            </div>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="total total-xl">
                        <div class="total__value">₴{{ sumIncome }}</div>
                        <div class="total__desc text-muted">Заработано на этой неделе</div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="total total-xl">
                        <div class="total__value">₴{{ sumExpense }}</div>
                        <div class="total__desc text-muted">Потраченно на этой неделе</div>
                    </div>
                </div>
            </div>



        </div>
    </div>

{% endblock %}